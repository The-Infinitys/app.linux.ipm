{
    "about": {
        "name": "Infinity Package Manager's Default Package",
        "id": "ipm-default-pack",
        "version":"0.1.0",
        "author": {
            "name": "The Infinity's",
            "id": "the-infinitys"
        },
        "description": "README.md",
        "license": "LICENSE",
        "dependencies": {
            "command": [
                "echo",
                "ls"
            ],
            "package": [
                {
                    "name": "apt",
                    "package_type": "dpkg",
                    "version": "*"
                }
            ]
        }
    },
    "files": {
        "global": [
            {
                "from": "source/exec.sh",
                "to": [
                    "bin/ipm-example",
                    "usr/bin/ipm-example"
                ]
            }
        ],
        "local": [
            {
                "from": "source/text.txt",
                "to": [
                    ".local/ipm-default/text.txt"
                ]
            }
        ]
    }
}